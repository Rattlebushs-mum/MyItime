<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        layout="@layout/set_title_bar"
        android:id="@+id/layout_set_title_bar"
        />

    <LinearLayout
        android:id="@+id/new_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#006363"
        android:paddingLeft="60dp"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_title"
            android:layout_marginTop="10dp"
            android:hint="  生日，纪念日，节日，考试…"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:layout_marginTop="16dp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:id="@+id/et_remark"
            android:maxLines="1"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:hint="  想说的话，目标，格言…"
            />
    </LinearLayout>

    <include
        android:id="@+id/new_set1"
        layout="@layout/item_set" />
    <include
        android:id="@+id/new_set2"
        layout="@layout/item_set"/>
    <include
        android:id="@+id/new_set3"
        layout="@layout/item_set"/>
    <include
        android:id="@+id/new_set4"
        layout="@layout/item_set"/>

</LinearLayout>