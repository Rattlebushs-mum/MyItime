<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_actionbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    >


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_gravity="left"
        android:layout_marginLeft="4dp"
        android:background="@drawable/circle1"
        android:onClick="btn_back"
        android:scaleType="fitXY"
        android:src="@drawable/raw_back" />

    <ImageView
        android:id="@+id/iv_sure"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:background="@drawable/circle1"
        android:onClick="btn_edit"
        android:scaleType="fitXY"
        android:src="@drawable/raw_edit" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/iv_sure"
        android:background="@drawable/circle1"
        android:scaleType="fitXY"
        android:src="@drawable/raw_share" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/iv_share"
        android:background="@drawable/circle1"
        android:onClick="btn_delete"
        android:scaleType="fitXY"
        android:src="@drawable/raw_delete" />

    <ImageView
        android:id="@+id/iv_fullscreen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/iv_delete"
        android:background="@drawable/circle1"
        android:scaleType="fitXY"
        android:src="@drawable/raw_full" />
</RelativeLayout>
